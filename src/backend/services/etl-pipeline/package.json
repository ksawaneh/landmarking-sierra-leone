{
  "name": "@landmarking/etl-pipeline",
  "version": "1.0.0",
  "description": "Government database ETL pipeline for LandMarking Sierra Leone",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "etl:full": "tsx src/cli.ts --mode=full",
    "etl:incremental": "tsx src/cli.ts --mode=incremental",
    "etl:cdc": "tsx src/cli.ts --mode=cdc",
    "etl:source": "tsx src/cli.ts",
    "etl:status": "tsx src/cli.ts --command=status",
    "etl:metrics": "tsx src/cli.ts --command=metrics",
    "etl:quality-report": "tsx src/cli.ts --command=quality-report",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "pg": "^8.11.3",
    "pg-copy-streams": "^6.0.6",
    "bull": "^4.12.0",
    "redis": "^4.6.12",
    "@elastic/elasticsearch": "^8.11.0",
    "axios": "^1.6.5",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "p-queue": "^7.4.1",
    "lodash": "^4.17.21",
    "date-fns": "^3.0.6",
    "node-geocoder": "^4.2.0",
    "natural": "^6.10.0",
    "turf": "^3.0.14",
    "@turf/turf": "^6.5.0",
    "prom-client": "^15.1.0",
    "nodemailer": "^6.9.8",
    "yaml": "^2.3.4",
    "commander": "^11.1.0",
    "ora": "^5.4.1",
    "chalk": "^4.1.2",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/bull": "^4.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/lodash": "^4.14.202",
    "@types/natural": "^5.1.4",
    "@types/node-geocoder": "^4.2.5",
    "@types/nodemailer": "^6.4.14",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0"
  }
}