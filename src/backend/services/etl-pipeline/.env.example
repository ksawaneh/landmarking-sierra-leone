# ETL Pipeline Environment Variables

# Node Environment
NODE_ENV=development
LOG_LEVEL=info

# Pipeline Configuration
ETL_CONFIG_PATH=./config/pipeline.yaml
RUN_ON_STARTUP=false
STARTUP_MODE=incremental

# Government Database Connections
MLHCP_CONNECTION_STRING=postgresql://user:pass@localhost:5432/mlhcp
MLHCP_BASE_URL=https://api.mlhcp.gov.sl
MLHCP_API_KEY=your-mlhcp-api-key

NRA_API_URL=https://api.nra.gov.sl
NRA_API_KEY=your-nra-api-key

OARG_CONNECTION_STRING=postgresql://user:pass@localhost:5432/oarg

# Destination Databases
DATABASE_URL=postgresql://user:pass@localhost:5432/landmarking

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Geocoding Service
GEOCODING_API_KEY=your-google-maps-api-key

# Monitoring and Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@landmarking.gov.sl
SMTP_PASS=your-smtp-password
SMTP_FROM=ETL Alerts <alerts@landmarking.gov.sl>

SMS_GATEWAY_URL=http://localhost:3001/api/admin/test/sms
SMS_GATEWAY_API_KEY=your-sms-gateway-key

ALERT_EMAIL=etl-team@landmarking.gov.sl
ALERT_SMS=+23276100000
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Metrics
METRICS_PORT=9090

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Database Credentials
POSTGRES_DB=landmarking
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_PORT=5432

# Grafana
GRAFANA_ADMIN_PASSWORD=change-me-in-production
GRAFANA_PORT=3000